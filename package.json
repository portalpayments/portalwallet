    "dev": "run-p --print-label dev:*",
    "dev:vite": "[ -L assets ] || ln -s src/assets assets && vite",
    "dev:manifest": "bash watch-manifest.bash",
    "build": "npm run clean; run-p --print-label build:*",
    "build:frontend": "vite build",
    "build:icons": "mkdir -p dist/assets; cp -rv src/assets/token-logos dist/assets",
    "build:service-worker": "npx rollup -c rollup-service-worker.config.js",
    "build:content-script": "npx rollup -c rollup-content-script-and-injected.config.js",
    "clean": "npx rimraf dist/* .rollup.cache",
    "publish": "bash make-zip-file.bash",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "jest",
    "update-on-chain-programs": "bash update-on-chain-programs.bash",
    "start-validator": "bash start-validator.bash",
    "make-zip-file": "bash make-zip-file.bash",
    "mint-identity-token": "npx esrun token-minters/mint-identity-token.ts",
    "start-decaf-proxy-server": "lcp --proxyUrl https://www.decaf.so"
